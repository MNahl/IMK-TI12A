<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="565dp" android:layout_gravity="left|top">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="AREMA CRONUS"
                android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="53dp" android:layout_marginTop="176dp"/>
        <ImageView
                android:layout_width="486dp"
                android:layout_height="660dp"
                android:id="@+id/imageView" android:background="@drawable/KLASEMEN"
                android:layout_alignParentStart="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil"
                android:id="@+id/buttonhasil" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/buttonjadwal"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal"
                android:id="@+id/buttonjadwal" android:layout_below="@+id/buttonhasil"
                android:layout_alignParentEnd="true" android:layout_alignStart="@+id/textView2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="KLASEMEN 2014-2015"
                android:id="@+id/textView2"
                android:layout_marginTop="25dp"
                android:textColor="#ffffff" android:layout_below="@+id/buttonjadwal" android:layout_alignParentEnd="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="LIGA INDONESIA"
                android:id="@+id/textView3"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignBottom="@+id/textView2" android:layout_alignParentStart="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:id="@+id/buttonhome" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView3"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIGA"
                android:id="@+id/buttonliga" android:layout_above="@+id/textView2" android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/buttonhome"/>
    </RelativeLayout>
</FrameLayout>